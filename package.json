{
	"name": "solidity-extension",
	"publisher": "tenderly",
	"description": "",
	"license": "MIT",
	"version": "1.0.0",
	"activationEvents": [
		"onLanguage:solidity"
	],
	"main": "./client/out/extension",
	"engines": {
		"vscode": "^1.55.0"
	},
	"scripts": {
		"compile": "tsc -b",
		"watch": "tsc -b -w",
		"postinstall": "cd client && yarn install && cd ../server && yarn install && cd ../parser && yarn install && cd ..",
		"client-test": "cd client && tsc -b && yarn run test && cd .."
	},
	"devDependencies": {
		"@types/node": "^12.12.0",
		"@typescript-eslint/eslint-plugin": "^4.22.1",
		"@typescript-eslint/parser": "^4.22.1",
		"eslint": "^6.4.0",
		"typescript": "^4.2.2"
	},
	"dependencies": {},
	"contributes": {
		"configuration": {
			"type": "object",
			"title": "Solidity configuration"
		},
		"languages": [
			{
				"id": "solidity",
				"aliases": [
					"Solidity",
					"solidity"
				],
				"extensions": [
					".sol"
				],
				"configuration": "./language-configuration.json"
			}
		],
		"grammars": [
			{
				"language": "solidity",
				"scopeName": "source.solidity",
				"path": "./syntaxes/solidity.json"
			}
		],
		"snippets": [
			{
				"language": "solidity",
				"path": "./snippets/solidity.json"
			}
		]
	}
}
