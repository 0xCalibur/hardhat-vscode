{
	"name": "solidity-extension",
	"publisher": "tenderly",
	"description": "",
	"license": "MIT",
	"version": "0.0.1",
	"activationEvents": [
		"onLanguage:solidity"
	],
	"main": "./client/dist/extension",
	"engines": {
		"vscode": "^1.55.0"
	},
	"scripts": {
		"compile": "tsc -b",
		"watch": "tsc -b -w",
		"link": "cd vscode-solidity-languageservice && yarn link && cd ../server && yarn link vscode-solidity-languageservice && cd ..",
		"client-test": "cd client && tsc -b && yarn run test && cd .."
	},
	"devDependencies": {
		"@types/node": "^12.12.0",
		"@typescript-eslint/eslint-plugin": "^4.22.1",
		"@typescript-eslint/parser": "^4.22.1",
		"eslint": "^6.4.0",
		"typescript": "^4.2.2"
	},
	"dependencies": {},
	"contributes": {
		"configuration": {
			"type": "object",
			"title": "Solidity configuration"
		},
		"languages": [
			{
				"id": "solidity",
				"aliases": [
					"Solidity",
					"solidity"
				],
				"extensions": [
					".sol"
				],
				"configuration": "./language-configuration.json"
			}
		],
		"grammars": [
			{
				"language": "solidity",
				"scopeName": "source.solidity",
				"path": "./syntaxes/solidity.json"
			}
		],
		"snippets": [
			{
				"language": "solidity",
				"path": "./snippets/solidity.json"
			}
		]
	}
}
